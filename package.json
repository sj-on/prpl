{
  "private": "true",
  "scripts": {
    "init": "lerna bootstrap",
    "clear": "rm -rf ./packages/*/dist",
    "build": "npm run clear && lerna changed | while read package; do npx rollup -c --scope $package || exit 1; done",
    "release": "npm run build && lerna publish",
    "reset": "npm run clear && rm -rf ./**/.cache && rm -rf ./**/node_modules && rm -rf ./package.lock && npm install"
  },
  "devDependencies": {
    "@lerna/project": "^4.0.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/node": "^16.0.0",
    "lerna": "^4.0.0",
    "rollup": "^2.52.7",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.3.5",
    "minimist": "^1.2.5",
    "@lerna/filter-packages": "^4.0.0"
  }
}