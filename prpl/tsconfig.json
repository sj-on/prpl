{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/client"]
}
