{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "incremental": true
  },
  "include": ["src/**/*.ts"]
}
