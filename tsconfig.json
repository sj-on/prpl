{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@prpl/*": ["packages/*/dist", "packages/*/src"]
    },
    "incremental": true
  },
  "exclude": ["**/node_modules", "**/dist"]
}
